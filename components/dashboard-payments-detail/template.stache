<div style="width:100%">
  <h3 class="pay-overview-heading" style="font-size: 1.2em;padding-top: 42px;padding-bottom: 15px;">Payment Details of {{getDisplayHeader}} for {{getDisplayFromPeriod}} - {{getDisplayToPeriod}}</h3>
</div>
<div style="width:44%">
<ul class="chart-list country-list">
  {{#detailItemsList}}
  <li {{popover item}} {{data 'item'}}>
    <rn-payment-chart text="{text}" value="{item.totPaidPrcnt}"></rn-payment-chart>
  </li>
  {{/detailItemsList}}
</ul>
</div>
